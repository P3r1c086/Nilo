<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/blue_grey_800</item>
        <item name="colorPrimaryDark">@color/blue_grey_800_dark</item>
        <item name="colorAccent">@color/yellow_a700_dark</item>

        <item name="colorControlNormal">@color/blue_grey_800</item>
        <item name="colorControlActivated">@color/blue_grey_800_dark</item>
        <item name="colorControlHighlight">@color/blue_grey_800_light</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    
    <style name="PreferencesTheme" parent="Theme.Nilo">
        <item name="colorSecondary">@color/yellow_a700_dark</item>
    </style>
    
    <style name="Theme.Nilo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Nilo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.Nilo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>